<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".layoutakun">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textViewakun1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UNION"
            android:textStyle="bold"
            android:padding="5dp"
            android:gravity="center"
            android:textSize="25dp"
            android:layout_marginRight="300dp"/>

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@mipmap/little_scanner"
            android:layout_marginLeft="-80dp"
            android:layout_toRightOf="@+id/textViewakun1"/>

        <ImageButton
            android:id="@+id/Btn1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/settings"
            android:layout_toRightOf="@+id/imageView1"
            android:onClick="akunsettings"/>
    </RelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/background1"
        />
    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:srcCompat="@drawable/people1"
        android:layout_marginTop="-110dp"
        android:layout_gravity="center"
        android:background="@color/white"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nama Pengguna"
        android:textAlignment="center"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        android:layout_marginBottom="20dp"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Ide"
        android:textAlignment="viewStart"
        android:paddingLeft="20dp"
        android:layout_gravity="start"
        android:layout_marginTop="5dp"
        android:background="@color/maincolor"
        android:textColor="@color/white"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Komentar"
        android:textAlignment="viewStart"
        android:paddingLeft="20dp"
        android:layout_gravity="start"
        android:layout_marginTop="5dp"
        android:background="@color/maincolor"
        android:textColor="@color/white"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Vendor favorit"
        android:textAlignment="viewStart"
        android:paddingLeft="20dp"
        android:layout_gravity="start"
        android:layout_marginTop="5dp"
        android:background="@color/maincolor"
        android:textColor="@color/white"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Cerita saya"
        android:textAlignment="viewStart"
        android:paddingLeft="20dp"
        android:layout_gravity="start"
        android:layout_marginTop="5dp"
        android:background="@color/maincolor"
        android:textColor="@color/white"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:background="@color/grey"
        android:orientation="vertical">
        <TextView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="Belum ada ide
              Mulai mencari ide untuk
        rencana pernikahan anda"
            android:textAlignment="center"
            android:layout_marginTop="30dp"
            android:textColor="@color/white"
            android:layout_gravity="center_horizontal" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:background="@color/maincolor"
            android:text="Cari Ide"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/white"
            android:layout_marginBottom="20dp"
            android:onClick="cariide"/>
    </LinearLayout>
    <View
        android:id="@+id/viewhomedivider"
        android:background="@color/Black"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="3dp" />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="40dp">
        <ImageView
            android:id="@+id/imageviewdivH1"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/home"
            android:layout_marginLeft="20dp"
            android:onClick="akuntohome"/>
        <TextView
            android:id="@+id/textviewdivH1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageviewdivH1"
            android:text="Home"
            android:layout_marginLeft="17dp"/>
        <ImageView
            android:id="@+id/imageviewdivH2"
            android:layout_width="30dp"
            android:layout_height="25dp"
            android:background="@mipmap/vendor"
            android:layout_toRightOf="@id/imageviewdivH1"
            android:layout_marginLeft="70dp"
            android:onClick="akuntovendor"/>
        <TextView
            android:id="@+id/textviewdivH2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageviewdivH2"
            android:layout_toRightOf="@id/textviewdivH1"
            android:text="Vendor"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="-5dp"/>
        <ImageView
            android:id="@+id/imageviewdivH3"
            android:layout_width="35dp"
            android:layout_height="30dp"
            android:layout_marginTop="-3dp"
            android:background="@mipmap/toko"
            android:layout_toRightOf="@id/imageviewdivH2"
            android:layout_marginLeft="45dp"
            android:onClick="akuntotoko"/>
        <TextView
            android:id="@+id/textviewdivH3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageviewdivH3"
            android:layout_toRightOf="@id/textviewdivH2"
            android:text="Toko"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="-7dp"/>
        <ImageView
            android:id="@+id/imageviewdivH4"
            android:layout_width="35dp"
            android:layout_height="30dp"
            android:layout_marginTop="-3dp"
            android:background="@mipmap/ide"
            android:layout_toRightOf="@id/imageviewdivH3"
            android:layout_marginLeft="40dp"
            android:onClick="akuntoide"/>
        <TextView
            android:id="@+id/textviewdivH4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageviewdivH4"
            android:layout_toRightOf="@id/textviewdivH3"
            android:text="Ide"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="-7dp"/>
        <ImageView
            android:id="@+id/imageviewdivH5"
            android:layout_width="35dp"
            android:layout_height="30dp"
            android:layout_marginTop="-3dp"
            android:background="@mipmap/profil"
            android:layout_toRightOf="@id/imageviewdivH4"
            android:layout_marginLeft="60dp"/>
        <TextView
            android:id="@+id/textviewdivH5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageviewdivH5"
            android:layout_toRightOf="@id/textviewdivH4"
            android:text="Ide"
            android:layout_marginLeft="75dp"
            android:layout_marginTop="-7dp"/>
    </RelativeLayout>
</LinearLayout>