<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".halamanvendor"
    android:padding="15dp"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/Btnvendor1"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="Filters"
            android:background="@color/maincolor"
            android:textColor="@color/white"/>
        <Button
            android:id="@+id/Btnvendor2"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:text="City : Medan"
            android:layout_marginLeft="30dp"
            android:background="@color/maincolor"
            android:textColor="@color/white"
            android:layout_toRightOf="@+id/Btnvendor1"/>
        <ImageView
            android:id="@+id/imagehalamanvendor1"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@id/Btnvendor1"
            android:background="@drawable/bride1"
            android:layout_marginTop="20dp"
            android:onClick="rincian"/>
        <TextView
            android:id="@+id/texthalamanvendor1"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_below="@id/imagehalamanvendor1"
            android:text="Vendor1"
            android:textStyle="bold"
            android:textSize="20dp"
            android:paddingLeft="80dp"
            android:textColor="@color/Black"
            android:background="@color/grey"/>
        <TextView
            android:id="@+id/texthalamanvendor2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/texthalamanvendor1"
            android:text="Wedding Shoes - Medan"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="-60dp"/>
        <ImageView
            android:id="@+id/imagehalamanvendor2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@mipmap/ic_star_foreground"
            android:layout_marginLeft="80dp"
            android:layout_below="@id/texthalamanvendor2"/>
        <ImageView
            android:id="@+id/imagehalamanvendor3"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@mipmap/ic_star_foreground"
            android:layout_below="@id/texthalamanvendor2"
            android:layout_toRightOf="@id/imagehalamanvendor2"/>
        <ImageView
            android:id="@+id/imagehalamanvendor4"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@mipmap/ic_star_foreground"
            android:layout_below="@id/texthalamanvendor2"
            android:layout_toRightOf="@id/imagehalamanvendor3"/>
        <ImageView
            android:id="@+id/imagehalamanvendor5"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@mipmap/ic_star_foreground"
            android:layout_below="@id/texthalamanvendor2"
            android:layout_toRightOf="@id/imagehalamanvendor4"/>
        <ImageView
            android:id="@+id/imagehalamanvendor6"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@mipmap/ic_star_foreground"
            android:layout_below="@id/texthalamanvendor2"
            android:layout_toRightOf="@id/imagehalamanvendor5"/>
        <ImageView
            android:id="@+id/imagehalamanvendor7"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@mipmap/profil"
            android:layout_below="@id/texthalamanvendor1"
            android:layout_marginTop="-80dp"/>
    </RelativeLayout>

</LinearLayout>