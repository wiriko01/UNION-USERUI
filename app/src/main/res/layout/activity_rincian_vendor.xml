<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RincianVendor"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/imagerincianvendor1"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="@drawable/background1"/>
    <ImageView
        android:id="@+id/imagerincianvendor2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/people1"
        android:layout_marginTop="-200dp"
        android:layout_gravity="center_horizontal"/>
    <TextView
        android:id="@+id/textrincianvendor1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/Black"
        android:textSize="25dp"
        android:text="Vendor 1"
        android:layout_gravity="center_horizontal"/>
    <TextView
        android:id="@+id/textrincianvendor2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wedding Shoes - Medan"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/Black"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/imagerincianvendor3"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/phone"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="50dp"/>
        <ImageView
            android:id="@+id/imagerincianvendor4"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/chat"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="100dp"
            android:layout_toRightOf="@+id/imagerincianvendor3"/>
        <ImageView
            android:id="@+id/imagerincianvendor5"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/pricelist"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="100dp"
            android:layout_toRightOf="@+id/imagerincianvendor4"/>
        <TextView
            android:id="@+id/textrincianvendor3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imagerincianvendor3"
            android:text="call"
            android:layout_marginLeft="60dp"
            android:textColor="@color/Black"
            android:textSize="18dp"/>
        <TextView
            android:id="@+id/textrincianvendor4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imagerincianvendor4"
            android:layout_toRightOf="@id/textrincianvendor3"
            android:text="Chat"
            android:layout_marginLeft="90dp"
            android:textColor="@color/Black"
            android:textSize="18dp"/>
        <TextView
            android:id="@+id/textrincianvendor5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imagerincianvendor5"
            android:layout_toRightOf="@id/textrincianvendor4"
            android:text="Pricelist"
            android:layout_marginLeft="90dp"
            android:textColor="@color/Black"
            android:textSize="18dp"/>
    </RelativeLayout>
    <view
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/grey"/>
    <TextView
        android:id="@+id/textrincianvendor6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Project"/>
    <view
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/grey"/>
    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/ImageViewHome4"
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:background="@drawable/weddingplanning1"/>
                <TextView
                    android:id="@+id/TextViewHome008"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Project 1"
                    android:textColor="@color/Black"
                    android:layout_below="@id/ImageViewHome4"/>
                <ImageView
                    android:id="@+id/ImageViewHome5"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:background="@mipmap/ic_star"
                    android:layout_below="@id/TextViewHome008"/>
                <ImageView
                    android:id="@+id/ImageViewHome6"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:background="@mipmap/ic_star"
                    android:layout_below="@id/TextViewHome008"
                    android:layout_toRightOf="@id/ImageViewHome5"/>
                <ImageView
                    android:id="@+id/ImageViewHome7"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:background="@mipmap/ic_star"
                    android:layout_below="@id/TextViewHome008"
                    android:layout_toRightOf="@id/ImageViewHome6"/>
                <ImageView
                    android:id="@+id/ImageViewHome8"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:background="@mipmap/ic_star"
                    android:layout_below="@id/TextViewHome008"
                    android:layout_toRightOf="@id/ImageViewHome7"/>
                <ImageView
                    android:id="@+id/ImageViewHome9"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:background="@mipmap/ic_star"
                    android:layout_below="@id/TextViewHome008"
                    android:layout_toRightOf="@id/ImageViewHome8"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp">
                <ImageView
                    android:id="@+id/ImageViewHome10"
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:background="@drawable/weddingplanning2"/>
                <TextView
                    android:id="@+id/TextViewHome009"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Project 2"
                    android:textColor="@color/Black"
                    android:layout_below="@id/ImageViewHome10"/>
                <ImageView
                    android:id="@+id/ImageViewHome11"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:background="@mipmap/ic_star"
                    android:layout_below="@id/TextViewHome009"/>
                <ImageView
                    android:id="@+id/ImageViewHome12"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:background="@mipmap/ic_star"
                    android:layout_below="@id/TextViewHome009"
                    android:layout_toRightOf="@id/ImageViewHome11"/>
                <ImageView
                    android:id="@+id/ImageViewHome13"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:background="@mipmap/ic_star"
                    android:layout_below="@id/TextViewHome009"
                    android:layout_toRightOf="@id/ImageViewHome12"/>
                <ImageView
                    android:id="@+id/ImageViewHome14"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:background="@mipmap/ic_star"
                    android:layout_below="@id/TextViewHome009"
                    android:layout_toRightOf="@id/ImageViewHome13"/>
                <ImageView
                    android:id="@+id/ImageViewHom15"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:background="@mipmap/ic_star"
                    android:layout_below="@id/TextViewHome009"
                    android:layout_toRightOf="@id/ImageViewHome14"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp">
                <ImageView
                    android:id="@+id/ImageViewHome16"
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:background="@drawable/weddingplanning3"/>
                <TextView
                    android:id="@+id/TextViewHome0010"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Project 3"
                    android:textColor="@color/Black"
                    android:layout_below="@id/ImageViewHome16"/>
                <ImageView
                    android:id="@+id/ImageViewHome17"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:background="@mipmap/ic_star"
                    android:layout_below="@id/TextViewHome0010"/>
                <ImageView
                    android:id="@+id/ImageViewHome18"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:background="@mipmap/ic_star"
                    android:layout_below="@id/TextViewHome0010"
                    android:layout_toRightOf="@id/ImageViewHome17"/>
                <ImageView
                    android:id="@+id/ImageViewHome19"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:background="@mipmap/ic_star"
                    android:layout_below="@id/TextViewHome0010"
                    android:layout_toRightOf="@id/ImageViewHome18"/>
                <ImageView
                    android:id="@+id/ImageViewHome20"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:background="@mipmap/ic_star"
                    android:layout_below="@id/TextViewHome0010"
                    android:layout_toRightOf="@id/ImageViewHome19"/>
                <ImageView
                    android:id="@+id/ImageViewHome21"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:background="@mipmap/ic_star"
                    android:layout_below="@id/TextViewHome0010"
                    android:layout_toRightOf="@id/ImageViewHome20"/>
            </RelativeLayout>
        </LinearLayout>
    </HorizontalScrollView>
    <Button
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Save Vendor"
        android:layout_marginTop="10dp"
        android:background="@color/maincolor"
        android:textColor="@color/white"/>
    <TextView
        android:id="@+id/textrincianvendor8"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:text="Bagikan pengalaman anda dengan vendor 1"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Tulis Komentar"
        android:layout_marginTop="10dp"
        android:background="@color/maincolor"
        android:textColor="@color/white"/>

</LinearLayout>